<UserControl x:Class="TrimVideo.Controls.TripleThumbSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrimVideo.Controls"
						 x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		
	</UserControl.Resources>
	<Canvas x:Name="canvas" MouseDown="MouseDown" MouseMove="MouseMove" MouseUp="MouseUp" 
					Background="Gray"
					Width="{Binding ElementName=root, Path=ActualWidth}" Height="60">
		<Rectangle x:Name="lowerThumb" Canvas.Top="-20" Width="20" Height="60" Fill="#FF0A8200"/>
		<Rectangle x:Name="upperThumb" Canvas.Top="-20" Width="20" Height="60" Fill="#FF0A8200"/>
		<Rectangle x:Name="middleThumb" Canvas.Top="-10" Width="20" Height="80" Fill="DarkGray"/>
	</Canvas>
</UserControl>
